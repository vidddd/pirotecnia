	<table>
		<tr>
			<td>
				<div class="control-group">
					{{ form_label(form.fecha, null, { 'label': 'Fecha', 'label_attr': {'class': 'control-label'} }) }}
					<div class="controls"><div class="input-append no-margin">
						{{ form_widget(form.fecha, { 'attr':{'class': 'input-small datepicker'}}) }}<span class="add-on"><i class="icon-calendar"></i></span>
					</div></div>
				</div>
			</td>
			<td>
				<div class="control-group">
					{{ form_label(form.hora, null, { 'label': 'Hora', 'label_attr': {'class': 'control-label'} }) }}
					<div class="controls"><div class="bootstrap-timepicker">
						{{  form_widget(form.hora, { 'attr':{'class': 'input-small'}}) }}
					</div></div>
				</div>
			</td>
		</tr>
		<tr>
			<td colspan="2">
				<div class="control-group">
					{{ form_label(form.cliente, null, { 'label': 'Cliente', 'label_attr': {'class': 'control-label'} }) }}
					<div class="controls">
						{{ form_widget(form.cliente, { 'attr':{'class': 'span4'}}) }}
					</div>
				</div>
			</td>
		</tr>
		<tr>
			<td colspan="2">
				<div class="control-group">
					{{ form_label(form.descripcion, null, { 'label': 'Descripcion', 'label_attr': {'class': 'control-label'} }) }}
					<div class="controls">
						{{ form_widget(form.descripcion, { 'attr':{'class': 'span4'}}) }}
					</div>
				</div>
			</td>
		</tr>
	</table>